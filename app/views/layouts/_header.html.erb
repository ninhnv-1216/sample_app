<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home.title"), root_path %></li>
        <li><%= link_to t("help.title"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("all_user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("log_in"), login_path %></li>
          <li><%= link_to t("sign_up"), signup_path %></li>
        <% end %>
        <li><%= link_to "VN", locale: :vi %></li>
        <li><%= link_to "EN", locale: :en %></li>
      </ul>
    </nav>
  </div>
</header>
