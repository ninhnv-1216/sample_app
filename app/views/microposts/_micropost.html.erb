<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.avt_size),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= sanitize t("posted", time_ago: time_ago_in_words(micropost.created_at)) %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("delete_user"), micropost,
        data: {confirm: t("sure")}, method: :delete %>
    <% end %>
  </span>
</li>
